# set active ntp 
timedatectl set-ntp true
# change time-zone 
ln -sf /usr/share/zoneinfo/America/Mexico_City

# install miscellaneous pkg 
pacman -S pkgfile --noconfirm
pkgfile --update

pacman -S net-tools --noconfirm
pacman -S virtualbox --noconfirm
pacman -S alsa-utils fftw ncurses alsa-lib iniparser pulseaudio cava --noconfirm
pacman -S atom --noconfirm

# make directories 
mkdir ~/Documents 
mkdir ~/Downloads
mkdir ~/Music
mkdir ~/Pictures
mkdir ~/Videos
mkdir ~/Documents/gits
mkdir ~/Documents/yay


