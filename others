# set active ntp 
timedatectl set-ntp true
# change time-zone 
ln -sf /usr/share/zoneinfo/America/Mexico_City

# install miscellaneous pkg 
pacman -S pkgfile alsa-utils virtualbox --noconfirm
pkgfile --update

# make directories 
mkdir Documents Downloads Music Pictures Videos

# download smithxyz LARBS
git clone git://github.com/LukeSmithxyz/LARBS.git
